<% include header %>

    <h4 class="center-align">Add a new entry to the guestbook.</h1>

    <div class="container">
        <div class="row">
            <form class="col s12" action="/new-entry" method="POST">
                <div class="row">
                    <div class="input-field col s12">
                        <input id="name" name="author" type="text" class="validate">
                        <label for="name">Name</label>
                    </div>
                </div>

                <div class="row">
                    <div class="input-field col s12">
                        <textarea id="textarea" name="text" class="materialize-textarea"></textarea>
                        <label for="textarea">Message</label>
                    </div>
                </div>

                <!-- TODO: Disable submit btn if inputs are empty -->

                <button class="btn waves-effect waves-light" type="submit">
                    Submit<i class="material-icons right">send</i>
                </button>
            </form>
        </div>
    </div>

<% include footer %>
